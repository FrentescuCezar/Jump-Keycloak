# Admin user created on first boot
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Reverse-proxy hints (Railway, Fly, Render â€¦)
KC_PROXY=edge
KC_HTTP_ENABLED=true
KC_HOSTNAME_STRICT=false           # disable strict SNI check

# URLs shown in tokens / email links
# set to http://localhost:8080 for local dev,
# set to https://<your-railway-domain> in production
KC_HOSTNAME_URL=http://localhost:8080
KC_HOSTNAME_ADMIN_URL=http://localhost:8080

# External Postgres (ignored in dev-compose because it runs with H2)
KC_DB=postgres
KC_DB_USERNAME=postgres
KC_DB_PASSWORD=postgres
KC_DB_URL=jdbc:postgresql://localhost:5432/keycloak